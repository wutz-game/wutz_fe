<h1 align="center">Wutz</h1>
<div class="game-grid">
  <table class="table-container">
    <thead>
      <tr>
        <% @categories.each do |category| %>
          <th class="header"><%= category %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @questions.each_with_index do |row, row_idx| %>
        <tr>
          <% row.each_with_index do |question, col_idx| %>
            <td class="game-cell" id="cell_<%= row_idx %>_<%= col_idx %>" data-question="<%= @questions[row_idx][col_idx] %>">
              <%= @points[row_idx][col_idx] %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div id="totalScore" align="center">Total Score: <span id="scoreValue">0</span></div>
<div id="popup" style="display:none;">
  <span id="closeBtn" style="cursor:pointer;">X</span>
  <h2>Question</h2>
  <p id="question"></p>
  <form id="myForm">
    <input type="text" id="myInput" placeholder="Enter text...">
    <button type="submit">Submit</button>
  </form>
  <button id="skipBtn">Skip Question</button>
  <div id="result"></div>
</div>
