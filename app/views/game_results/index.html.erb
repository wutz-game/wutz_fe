<div style=justify-content: center">
  <h1>Game Results Page</h1>
  <br>
  <% if @user != nil %>
    <p>Great job <%= @user.username %>!</p>
  <% end %>
  <p id="displayedScore">Score: <%= @facade.score %></p>
  <br> 
  <%= @facade.categories %>
  <br> 
  <%= @facade.results_1 %>
  <br>        
  <%= @facade.results_2 %>
  <br>
  <%= @facade.results_3 %>
  <br>
  <% if @user != nil %>
    <%= button_to "Save Your Game!",  params: { user_id: @user.id } %>
  <% end %>
  <br>
  <button id="shareGameBtn">Share Game</button>
</div>